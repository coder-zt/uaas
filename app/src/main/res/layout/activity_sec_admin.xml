<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user: admin"
            android:textColor="#000"
            android:textSize="26sp"
            android:background="#84928d"
            android:gravity="center_horizontal"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9AFF9A"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD700"
                android:gravity="center_horizontal"
                android:text="专业信息编辑"
                android:textColor="#000"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#97FFFF">

                <EditText
                    android:id="@+id/et_input_profession"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:hint="输入专业名称"/>

                <Button
                    android:id="@+id/btn_insert_profession"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="新增"
                    android:textSize="20sp"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9AFF9A"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD700"
                android:gravity="center_horizontal"
                android:text="课程信息编辑"
                android:textColor="#000"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#97FFFF"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_input_course"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="输入课程名称"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_input_credit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="输入课程学分"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_input_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="开课时间"/>

                <TextView
                    android:id="@+id/tv_input_pro_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="所属专业"/>
                <Button
                    android:id="@+id/btn_insert_course"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="新增"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF68F"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据表查询"
                android:textColor="#000"
                android:textSize="26sp"
                android:background="#FFD700"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_selector"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:text="选择数据表"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <Button
                    android:id = "@+id/btn_showdata"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="80dp"
                    android:text="展示数据"
                    android:textSize="28sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_table_context"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textSize="18sp"
                android:background="#ffffcc"/>


        </LinearLayout>




        </LinearLayout>
</ScrollView>